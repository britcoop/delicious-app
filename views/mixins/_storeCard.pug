mixin storeCard(store = {})
	.store
		.store__hero
			.store__actions
				.store__action.store__action--edit
					a(href=`/stores/${store._id}/edit`)
						!= h.icon('pencil')
			img(src=`/uploads/${store.photo || 'store.png'}`)
			h2.title
				//- to generate an attribute you have to use backticks and ${}
				//- to put a variable in text content you have to use #{}
				a(href=`/store/${store.slug}`) #{store.name}
		.store__details
			//- split changes the description into an array with the words being the items in the array
			//- slice 0,25 cuts the array off after 25
			//- join rejoins each item of the array back into the sentence
			p= store.description.split(' ').slice(0,25).join(' ')